{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": "google",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "quotes": "off",
    "object-curly-spacing": ["error", "always"],
    "comma-dangle": "off",
    "new-cap": 0,
    "indent": "off",
    "operator-linebreak": ["error", "none"],
    "operator-linebreak": "off",
    "space-unary-ops": [
      2,
      {
        "words": true,
        "nonwords": false,
        "overrides": {
          "new": false,
          "++": true
        }
      }
    ]
    // "no-console": "error"
  }
}
